    private async Task enter(KeyboardEventArgs e, int textbox)
    {
        if (e.Key == "Tab" || e.Key == "Enter")
        {
            Loading.Show();
            await Task.Delay(1500);
            Loading.Hide();
            if (materialNPTXT != "" && materialNPTXT[0] == 'P')
                materialNPTXT = materialNPTXT.Substring(1);

